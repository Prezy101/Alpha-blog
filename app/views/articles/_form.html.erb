  <%= render 'layouts/errors', obj:@article %>
    <div class="well">
      <%= form_for @article do  |f| %>
        <p>

          <%= f.label :title %><br/>
          <%= f.text_field :title, :class =>'form-control', :style =>'width: 50%;', :autofocus=>'true', :placeholder=>'Title' %>
        </p>
        <p>
          <%= f.label :description %><br/>
          <%= f.text_area :description, :class =>'form-control', :style =>'width: 50%; height: 150px;', :placeholder=>'Description' %>
        </p>
          <div class="form-group">

            <div class="row">

              <div class="col-sm-offset-2 col-sm-8">

                <%=f.collection_check_boxes(:category_ids, Category.all, :id, :name, prompt: true) do |b| %>
                    <% b.check_box
                       b.label(class: "checkbox-inline input_checkbox") do
                         b.check_box(class: "checkbox") + b.text %>
                    <% end %>
                <% end %>


              </div>

            </div>

          </div>


          <p>
          <%= f.submit :class => 'btn btn-primary' %>
        </p>
      <% end %>

      <br/>
      <%= link_to 'Articles', articles_path %>
    </div>